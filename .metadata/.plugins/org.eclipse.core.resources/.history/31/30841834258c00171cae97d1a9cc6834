import processing.core.PApplet;

public class House
{
	float scaleFactor;
	private int translateX;
	private int translateY;

	public House()
	{
		scaleFactor = 1f;
	}

	// method called by the DrawingSurface class draw the the house
	public void draw(PApplet drawer)
	{

		drawer.pushMatrix();

		drawer.translate(translateX, translateY);

		// scale around the center
		drawer.translate(DrawingSurface.SCREEN_WIDTH / 2, DrawingSurface.SCREEN_HEIGHT / 2);
		drawer.scale(scaleFactor, scaleFactor);
		drawer.translate(-DrawingSurface.SCREEN_WIDTH / 2, -DrawingSurface.SCREEN_HEIGHT / 2);


		// body
		drawer.fill(191, 229, 153);
		drawer.rect(125, 250, 250, 160);

		// roof
		drawer.fill(226, 88, 24);
		drawer.triangle(125 , 250, 375 , 250, 250 , 125);

		// windows
		drawer.fill(99, 141, 211);
		drawer.rect(148 , 270, 40, 40);
		drawer.rect(313 , 275, 40, 40);

		// door
		drawer.fill(209, 176, 79);
		drawer.rect(230 , 330, 40, 80);

		drawer.popMatrix();

		
//		// axis
//		drawer.stroke(255);
//		drawer.line(250, 0, 250, 500);
//		drawer.line(0, 250, 500, 250);
		

	}

	/* method called by the mouseWheel listener to 
	 * handle with the changes in the size of the house 
	*/
	public void zoom(int scrollDir, int mouseX, int mouseY) 
	{

		float change = scrollDir > 0.0f ? 1.05f : scrollDir < 0.0f ? 1.0f/1.05f : 1.0f;
		scaleFactor *= change;

	}

	/* method called by the mouseDragged listener to 
	 * handle with the changes in the x and y coordinates of the house 
	*/
	public void move(int mouseX, int mouseY, int pmouseX, int pmouseY) 
	{

		translateX += mouseX - (pmouseX);
		translateY += mouseY - (pmouseY);

	}






}

