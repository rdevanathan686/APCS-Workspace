import processing.core.PApplet;

public class House
{
	
	private int xVel;
	float scaleFactor;
	
	public House()
	{
		xVel = 0;
		scaleFactor = 1f;
	}

	public void draw(PApplet drawer)
	{
		
		drawer.translate(xVel, 0);
		
		drawer.translate(drawer.width/2, drawer.height/2);
		drawer.scale(scaleFactor);
		drawer.translate(-1 * drawer.width/2, -1 * drawer.height/2);
		
		// initial conditions
		
		
		// body
		drawer.fill(191, 229, 153);
		drawer.rect(125, 250, 250, 160);
		
		// roof
		drawer.fill(226, 88, 24);
		drawer.triangle(125 , 250, 375 , 250, 250 , 125);
		
		// windows
		drawer.fill(99, 141, 211);
		drawer.rect(148 , 270, 40, 40);
		drawer.rect(313 , 275, 40, 40);
		
		// door
		drawer.fill(209, 176, 79);
		drawer.rect(230 , 330, 40, 80);
		
		
		/*
		// axis
		drawer.stroke(255);
		drawer.line(250, 0, 250, 500);
		drawer.line(0, 250, 500, 250);
		*/
		
	}

	public void zoom(int keyCode) 
	{
		
		if (keyCode == PApplet.UP)
			scaleFactor += 0.1;
		else if (keyCode == PApplet.DOWN)
			scaleFactor -= 0.1;
		
		

	}

	public void move(int keyCode) 
	{
		
		if (keyCode == PApplet.RIGHT)
			xVel += 10;
		else if (keyCode == PApplet.LEFT)
			xVel -= 10;
		
		
	}
	
	
	

}

