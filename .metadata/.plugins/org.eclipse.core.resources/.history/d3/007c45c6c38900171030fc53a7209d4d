import processing.core.PApplet;

public class House
{
	
	private int xVel;
	float scaleFactor;
	
	public House()
	{
		xVel = 0;
		scaleFactor = 1f;
	}

	public void draw(PApplet drawer)
	{

		int width = drawer.width;
		int height = drawer.height;
		
		
		drawer.pushMatrix();
		
		
		drawer.translate(xVel, 0);
		
		drawer.translate(drawer.width/2, drawer.height/2);
		drawer.scale(scaleFactor, scaleFactor);
		drawer.translate(-1 * drawer.width/2, -1 * drawer.height/2);
		
		
		// body
		drawer.fill(191, 229, 153);
		drawer.rect(width / 4, height / 2, width / 2, height * 3.125f);
		
		// roof
		drawer.fill(226, 88, 24);
		drawer.triangle(width / 4 , height / 2, 3 * width / 4 ,height / 2, width / 2 , height / 4);
		
		// windows
		drawer.fill(99, 141, 211);
		drawer.rect(125 * width / 37, 50 * height / 27, 25 * width / 2, 25 * height / 2);
		drawer.rect(313 , 275, 40, 40);
		
		// door
		drawer.fill(209, 176, 79);
		drawer.rect(5 * width / 23 , 5 * height / 33, 25 * width / 2, 25 * height / 4);
		
		drawer.popMatrix();
		
		/*
		// axis
		drawer.stroke(255);
		drawer.line(250, 0, 250, 500);
		drawer.line(0, 250, 500, 250);
		*/
		
	}

	public void zoom(int keyCode) 
	{
		
		if (keyCode == PApplet.UP)
			scaleFactor += 0.1;
		else if (keyCode == PApplet.DOWN)
			scaleFactor -= 0.1;
		
		

	}

	public void move(int keyCode) 
	{
		
		if (keyCode == PApplet.RIGHT)
			xVel += 10;
		else if (keyCode == PApplet.LEFT)
			xVel -= 10;
		
		
	}
	
	
	

}

