import processing.core.PApplet;

public class Person
{
	
	private int xVel, yVel;
	float scaleFactor;
	
	public Person()
	{
		xVel = 0;
		yVel = 0;
		scaleFactor = 1f;
	}

	public void draw(PApplet drawer)
	{	
//		
//		drawer.translate(drawer.width/2, drawer.height/2);
//		drawer.scale(scaleFactor, scaleFactor);
//		drawer.translate(-1 * drawer.width/2, -1 * drawer.height/2);
		
		
		// body
		drawer.line(40, 250, 40, 300);
		drawer.line(30, 270, 50, 270);
		drawer.line(40, 300, 30, 325);
		drawer.line(40, 300, 50, 325);
	
		// head
		drawer.ellipse(40, 235, 30, 30);
				
	}



	
	
	

}

